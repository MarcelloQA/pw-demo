{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2020", "dom"],
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@fixtures": ["fixtures/fixtures"],
      "@interfaces/*": ["interfaces/*"],
      "@data/*": ["data/*"]
    }
  },
  "include": ["**/*.ts"]
}
